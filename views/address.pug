extends layout

block content
    h1.text-center AdaView
    .container
    form(method='POST', action='/address')
        .row
            .col-sm-12
                .input-group
                    input.form-control(name='search', id='search' value=(address == '') ? '' : address)
                    span.input-group-btn
                        button.btn.btn-primary(type='submit') Go!
        .row
            .col-sm-8
                br
                h5 Address
                .row
                    .col-sm-4
                        p
                            small Address
                        p
                            small Transactions
                        p
                            small Final balance
                    .col-sm-8
                        p
                            small #{address}
                        p
                            small #{data.txNum}
                        p
                            small #{data.balance} ADA
        if data.txNum
        .row
            br
            .col-sm-12
                h5 Latest transaction history
            for tx in data.txns
                .col-sm-6
                    p
                        small #{tx.id}
                .col-sm-3
                    p
                        small
                            span.label.label-success IN&nbsp;
                        small #{tx.ins} ADA
                    p
                        small
                            span.label.label-danger OUT&nbsp;
                        small #{tx.outs} ADA
                    br
                .col-sm-3
                    p
                        small #{tx.dt}


